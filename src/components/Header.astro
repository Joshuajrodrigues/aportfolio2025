---
import HeaderLink from "./HeaderLink.astro";
import MenuButton from "./MenuButton.astro";
import { SITE_TITLE } from "../consts";
import CTAButton from "./CTAButton.astro";
const { headerColor } = Astro.props;
---

<header
  style={{
    backgroundColor: headerColor,
  }}
>
  <nav>
    <h1 class="visually-hidden">Akanksha Gajankar</h1>
    <h2>
      <a aria-label="Akanksha Gajankar" class="mobile-header" href="/">A</a>
      <a class="desktop-header" href="/">{SITE_TITLE}</a>
    </h2>
    <div class="mobile-header menu">
      <MenuButton />
    </div>
    <div class="desktop-header internal-links">
      <HeaderLink href="/">All</HeaderLink>
      <HeaderLink href="/projects">Work</HeaderLink>
      <HeaderLink href="/writing">Writing</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <CTAButton>
        <a href="mailto:work@akankshagajankar.com"> Say Hi </a>
      </CTAButton>
    </div>
  </nav>
  <p class="visually-hidden">Hi, I’m Akanksha — a UI/UX designer in Goa. Welcome to my digital home, where I share design adventures, stories, and art.</p>
  <div class="border"></div>
</header>
<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  header {
    margin: 0;
    padding: 0 1em;
    background: white;
  }
  .border {
    padding: 0px 20px;
    border-bottom: 1px solid black;
  }
  h2 {
    margin: 0;
    font-size: clamp(1em, 1.25em, 1.5em);
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex !important;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    color: #d5673e;
  }
  .internal-links {
    display: flex;
    gap: 64px;
    font-weight: 400;
    line-height: 30px;
    font-size: clamp(0.5em, 1em, 1.25em);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  .mobile-header {
    display: none;
  }
  .desktop-header {
    display: block;
  }
  @media (max-width: 720px) {
    .desktop-header {
      display: none;
    }
    .mobile-header {
      display: block;
    }
  }
</style>
