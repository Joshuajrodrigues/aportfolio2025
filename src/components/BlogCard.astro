---
const { title,blog, description,tag,link,colors } = Astro.props;

---


<div style={{backgroundColor:colors[1]}} class="frame">
  <p style={{backgroundColor:colors[0]}} class="title">
    <span>{blog[0]}</span>
    <span class="type">Writting</span>
    <img src={"/card buttons.svg"} alt="000" />
  </p>
  <div class="folder">
    
    <div class="content">
      <span class="tag">
        <em>
          {tag[0]}
        </em>
      </span>
      <b class="content-title">
        {title}
      </b>
      <p class="content-desp">
        {description}
      </p>
      <a href={link}>READ</a>
    </div>

  </div>
</div>

<style>
  .frame {
    border: 1px solid black;
    max-width: 400px;
    height: fit-content;
    position: relative;
    border-radius: 12px;

    .title {
      background-color: #fff;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
      border-bottom: 1px solid black;
      line-height: 12px;
      max-height: 40px;
      margin: 0px;
      font-size: 14px;
      display: flex;
      justify-content: space-between;
      padding: 10px 20px;
      .type {
        font-weight: 600;
      }
    }

    > img {
      border-bottom-left-radius: 12px;
      border-bottom-right-radius: 12px;
    }
    .folder{
        margin: 24px;
        background-image: url(/site-images/frame.webp);
        background-size: cover;
        padding: 12px;
        position: relative;
    }
    .content{
      display: flex;
      flex-direction: column;
      margin: 46px 10px;
      
      .tag{
        position: absolute;
        top: 5px;
        left: 15px;
        font-size: 15px;
        color: #1e1e1e7a;
      }
      .content-title{
        font-size: 20px;
        font-weight:"bold";
      }
      .content-desp{
        font-size: 14px;
        color: #1e1e1e7a;
      }
      a{
        color: black;
        width: 100%;
        border: 1px solid black;
        border-radius: 4px;
        text-align: center;
        font-weight:bold;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
      }
    }
  }
 
</style>
