---


const { title, src, type, tags, id, colors, art, artTitle,hideType=false } = Astro.props;


---

<div style={{ backgroundColor: colors?.[0] }} class="frame">
  <p class="title">
    <span>{title}</span>
    {
      !hideType &&  <span class="type">{type === "art" ? "Art" : tags?.[0] || "Project"}</span>
    }
   
    <img loading="lazy" src={"/site-icons/card-buttons.svg"} alt="000" />
  </p>

  <img  src={src} alt={title} />
</div>

<style>
  .frame {
    border: 1px solid black;
    max-width: 400px;
    height: fit-content;
    border-radius: 12px;
    background-color: #fff;
    font-size: 0;
    line-height: 0;
    .title {
      line-height: 12px;
      max-height: 40px;
      border-bottom: 1px solid black;
      margin: 0px;
      font-size: 14px;
      display: flex;
      justify-content: space-between;
      padding: 10px 20px;
      .type {
        font-weight: 600;
      }
    }
    > img {
      border-bottom-left-radius: 12px;
      border-bottom-right-radius: 12px;
    }
  }
  a {
    text-decoration: none;
    color: inherit;
  }
  a:hover {
    text-decoration: none;
    color: inherit;
  }
</style>
